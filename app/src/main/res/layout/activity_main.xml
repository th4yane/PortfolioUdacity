<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.thayane.portfolioudacity.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Nanodegree Apps"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/textView"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="24dp"
        app:layout_constraintHorizontal_bias="0.502"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/popularMoviesBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="24dp"
        android:text="Popular Movies"
        app:layout_constraintLeft_toLeftOf="@+id/textView"
        app:layout_constraintRight_toRightOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/stockHawkBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stock Hawk"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/popularMoviesBtn"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/popularMoviesBtn"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/popularMoviesBtn" />

    <Button
        android:id="@+id/buildItBiggerBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Build it Bigger"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/stockHawkBtn"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/stockHawkBtn"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/stockHawkBtn" />

    <Button
        android:id="@+id/materialBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Make Your App Material"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/buildItBiggerBtn"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/buildItBiggerBtn" />

    <Button
        android:id="@+id/ubiquitousBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go Ubiquitous"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/materialBtn"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/materialBtn"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/materialBtn" />

    <Button
        android:id="@+id/capstoneBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Capstone: My Own App"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/ubiquitousBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/ubiquitousBtn" />


</android.support.constraint.ConstraintLayout>
